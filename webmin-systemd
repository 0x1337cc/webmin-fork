[Unit]
Description=Webmin server daemon
After=syslog.target

[Service]
ExecStart=/etc/webmin/.start-init
ExecStop=/etc/webmin/.stop-init
PIDFile=/var/webmin/miniserv.pid
Type=forking
Restart=on-failure
RestartSec=1s
StartLimitBurst=3
StartLimitIntervalSec=3
OOMPolicy=kill
OOMScoreAdjust=-999

[Install]
WantedBy=multi-user.target
